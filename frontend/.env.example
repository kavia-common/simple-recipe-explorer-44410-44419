# Recipe Explorer Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
# Set one of these to enable API integration, otherwise app will use mock data
NG_APP_API_BASE=
NG_APP_BACKEND_URL=

# Frontend Configuration
NG_APP_FRONTEND_URL=http://localhost:3000
NG_APP_WS_URL=

# Environment
NG_APP_NODE_ENV=development

# Development Settings
NG_APP_NEXT_TELEMETRY_DISABLED=1
NG_APP_ENABLE_SOURCE_MAPS=true
NG_APP_PORT=3000

# Security & Performance
NG_APP_TRUST_PROXY=false
NG_APP_LOG_LEVEL=info
NG_APP_HEALTHCHECK_PATH=/health

# Feature Flags
NG_APP_FEATURE_FLAGS=
NG_APP_EXPERIMENTS_ENABLED=false
